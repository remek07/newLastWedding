 <!-- początek strony ze zdjęciem pary młodej-->
<section class="home" id="home">
    <div class="contentHome">
        <img src="./images/homeExamplePage.jpg" alt="">
        <div class="box"></div>
        <div class="box">
            <!-- górne menu -->
            <header>
